@using BOL;
@{
    ViewData["Title"]="Students List";
}

<div align="center">
    <h2><b>Students List</b></h2>
    <hr/>
    <a href="Insert">Add Student</a><br/>
    <a href="Delete">Delete Student Info</a><br/>
    <a href="Update">Update Student Info</a><br/>

    <hr/>
    <style>
        table,th,td{
            border: 1px solid black;
            @* border-collapse:collapse; *@
        }
    </style>
    @{
        List<Student> students=ViewData["students"] as List<Student>;
        <table class="text-center" border="2" width="600">
        <thead>
            <tr>
                <th>Student Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Contact</th>
                <th>City</th>
            </tr>
        </thead>
        @foreach(Student s in students){
            <tbody>
            <tr>
                <td>@s.Id</td>
                <td>@s.Fname</td>
                <td>@s.Lname</td>
                <td>@s.Contact</td>
                <td>@s.City</td>
            </tr>
        </tbody>
        }    
    </table>
    }
</div>